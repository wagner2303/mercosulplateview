                app:country="br"
                app:plate="DDD1C34"
                android:layout_width="200dp"
                android:layout_height="50dp" android:id="@+id/view5"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/view3" android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" app:type="oficial"
                app:layout_constraintBottom_toBottomOf="@+id/view3"/>

        <com.wagner2303.mercosulplateview.MercosulPlateView
                android:layout_width="190dp"
                android:layout_height="97dp"
                android:id="@+id/view6"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:country="br"
                app:plate="ABC1D32" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/view4"/>
