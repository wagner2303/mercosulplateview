                app:country="br"
                app:plate="ASD1234"
                app:type="comercial"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.52"/>
        <com.wagner2303.mercosulplateview.MercosulPlateView
                android:layout_width="165dp"
                android:layout_height="152dp"
                android:id="@+id/view3" android:layout_marginTop="8dp"
